<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0
        https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
        name="gwt-springboot-archetype">

    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>com.example</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>myapp</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>0.0.1-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}.${artifactId}</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <!-- Java source files -->
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>

        <!-- GWT module files and UI XML -->
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.gwt.xml</include>
                <include>**/*.gitkeep</include>
            </includes>
        </fileSet>

        <!-- CSS files -->
        <fileSet filtered="false" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.css</include>
            </includes>
        </fileSet>

        <!-- Resources -->
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.yml</include>
                <include>**/*.yaml</include>
                <include>**/*.properties</include>
                <include>**/*.xml</include>
                <include>**/*.gitkeep</include>
            </includes>
        </fileSet>

        <!-- Test source files -->
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.gitkeep</include>
            </includes>
        </fileSet>

        <!-- Maven wrapper -->
        <fileSet filtered="false" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.mvn/**</include>
                <include>mvnw</include>
                <include>mvnw.cmd</include>
            </includes>
        </fileSet>

        <!-- Git files -->
        <fileSet filtered="false" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>.gitignore</include>
                <include>.gitattributes</include>
            </includes>
        </fileSet>

    </fileSets>

</archetype-descriptor>
